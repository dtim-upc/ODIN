{
  "formTitle": "Create new repository",
  "type": "object",
  "properties": {

    "commonRepositoryFields": {
      "type": "section",
      "label": "",
      "properties": {
        "Repository name": {
          "type": "string",
          "label": "Repository name"
        },
        "Repository description": {
          "type": "string",
          "label": "Repository description"
        }
      }
    },
    "repositoryType": {
      "type": "select",
      "label": "Select Repository Type",
      "options": [
        {
          "label": "Local repository",
          "value": "localRepository"
        },
        {
          "label": "JDBC repository",
          "value": "jdbcRepository"
        }
      ]
    },
    "localRepositoryDetails": {
      "type": "section",
      "label": "Local Repository Details",
      "dependsOn": {
        "field": "repositoryType",
        "value": "localRepository"
      },
      "properties": {
        "Path": {
          "type": "string",
          "label": "Path",
          "maxLength": 50
        }
      }
    },
    "jdbcRepositoryDetails": {
      "type": "section",
      "label": "JDBC Repository Details",
      "dependsOn": {
        "field": "repositoryType",
        "value": "jdbcRepository"
      },
      "properties": {
        "connectBy": {
          "type": "toggle",
          "label": "Connect by",
          "options": [
            {
              "label": "Connect by URL",
              "value": "connectByUrl"
            },
            {
              "label": "Connect by Host",
              "value": "connectByHost"
            }
          ]
        },
        "authentication": {
          "type": "section",
          "label": "Authentication",
          "dependsOn": {
            "field": "connectBy",
            "value": "connectByHost"
          },
          "properties": {
            "username": {
              "type": "string",
              "label": "Username"
            },
            "password": {
              "type": "string",
              "label": "Password"
            }
          }
        }
      }
    },
    "botonEnviar": {
      "type": "button",
      "text": "Enviar"
    },
    "toggleActivo": {
      "type": "toggle",
      "label": "Connect by",
      "options": [
        {
          "label": "Connect by URL",
          "value": "connectByUrl"
        },
        {
          "label": "Connect by Host",
          "value": "connectByHost"
        }
      ]
    }
  },
  "required": ["nombre", "email"]
}
