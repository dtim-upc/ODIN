{
  "formTitle": "Create new repository",
  "type": "object",
  "properties": {
    "repositoryName": {
      "type": "string",
      "label": "Repository name"
    },
    "repositoryDescription": {
      "type": "string",
      "label": "Repository description"
    },
    "repositoryType": {
      "type": "select",
      "label": "Select Repository Type",
      "options": [
        {
          "label": "Local repository",
          "value": "localRepository"
        },
        {
          "label": "JDBC repository",
          "value": "jdbcRepository"
        }
      ]
    },
    "localRepositoryDetails": {
      "type": "section",
      "label": "Local Repository Details",
      "dependsOn": {
        "field": "repositoryType",
        "value": "localRepository"
      },
      "properties": {
        "path": {
          "type": "string",
          "label": "Path",
          "maxLength": 50
        }
      }
    },
    "jdbcRepositoryDetails": {
      "type": "section",
      "label": "JDBC Repository Details",
      "dependsOn": {
        "field": "repositoryType",
        "value": "jdbcRepository"
      },
      "properties": {
        "connectBy": {
          "type": "toggle",
          "label": "Connect by",
          "default": {
            "label": "Connect by URL",
            "value": "connectByUrl"
          },
          "options": [
            {
              "label": "Connect by URL",
              "value": "connectByUrl"
            },
            {
              "label": "Connect by Host",
              "value": "connectByHost"
            }
          ]
        }
      }
    },
    "connectByUrl": {
      "type": "section",
      "label": "Connect by URL Details",
      "dependsOn": {
        "field": "connectBy",
        "value": "connectByUrl"
      },
      "properties": {
        "url": {
          "type": "string",
          "label": "URL",
          "maxLength": 50
        }
      }
    },
    "connectByHost": {
      "type": "section",
      "label": "Connect by Host Details",
      "dependsOn": {
        "field": "connectBy",
        "value": "connectByHost"
      },
      "properties": {
        "hostname": {
          "type": "string",
          "label": "Hostname"
        },
        "port": {
          "type": "string",
          "label": "Port"
        },
        "databasename": {
          "type": "string",
          "label": "Database name"
        }
      }
    },
    "authentication": {
      "type": "section",
      "label": "Authentication",
      "dependsOn": {
        "field": "repositoryType",
        "value": "jdbcRepository"
      },
      "properties": {
        "username": {
          "type": "string",
          "label": "Username"
        },
        "password": {
          "type": "string",
          "label": "Password"
        },
        "botonTestConnection": {
          "type": "button",
          "label": "Test connection",
          "action": ""
        }
      }
    }
  }
}
